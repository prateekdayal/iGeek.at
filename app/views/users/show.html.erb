<h2><%= image_tag @user.gravatar_url %> <%= @user.name %> (<%= @user.geek_id %>)</h2>

<div id="content">
  <% if current_user %>
  <div id="auto_complete">
  <h1>What do you use?</h1>
  <input id="products" size="50" />
  <script type="text/javascript">var switchTo5x=true;</script><script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script><script type="text/javascript">stLight.options({publisher:'60e3d898-73e3-46a3-be81-43546b4c25c5'});</script>
  <script type="text/javascript">

  $("#products").bind( "keydown", function( event ) {
				if ( event.keyCode === $.ui.keyCode.TAB &&
						$( this ).data( "autocomplete" ).menu.active ) {
					event.preventDefault();
				}
			}).autocomplete({
				minLength: 0,
        source: <%=raw @autocomplete_array.to_json%>,
				focus: function() {
					// prevent value inserted on focus
					return false;
				},
				select: function( event, ui ) {
          term = ui.item;
          console.log(term.label);
          $.ajax('/users/<%=current_user.id%>/products?id=' + term.value, {
            type: 'post',
            success: function(data, status){
              console.log(data);
              $("#blocks").prepend("<div class=\"block\"><img src='" + data.product.icon.fortyeight.url + "'/> </div>");
            }
          });
          this.value = '';
					return false;
				}
			});

                      </script>
                    </div>
  <% end %>

  <div id="#blocks">
  <% @products.each do |product|%>
    <div class="block">
      <%= image_tag product.icon.one_twenty_eight.url, :alt => product.name %>  
    </div> 
  <%end-%>
  </div>
</div>

<div id="sidebar">
  <div id="about" class="section">
    <h3> About </h3>
    <%= @user.about_me %>
  </div>

  <div id="contact">
    <h3>On the web</h3>
    <ul>
      <%if @user.hn_username and !@user.hn_username.empty? %>
        <li class="first"><a href="http://news.ycombinator.com/user?id=<%=@user.hn_username%>" rel="nofollow" class="hn icon"><%=@user.hn_username%></a>
      <%end%>
      <%if @user.github_username and !@user.github_username.empty? %>
        <li><a href="https://github.com/<%=@user.github_username%>" rel="nofollow" class="github icon"><%=@user.github_username%></a>
      <%end%>
      <li><span  class='st_twitter_hcount' displayText='Tweet'></span><span  class='st_facebook_hcount' displayText='Facebook'></span><span  class='st_plusone_hcount' ></span></li>
    </ul>
  </div>
</div>
